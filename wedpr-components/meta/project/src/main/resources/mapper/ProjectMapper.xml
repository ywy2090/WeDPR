    <select id="queryJobsByDatasetID" resultMap="JobDOMap">
        SELECT t.*
            FROM `wedpr_job_table` t
        INNER JOIN (
            SELECT
                DISTINCT job_id
            FROM
                `wedpr_job_dataset_relation`
            WHERE
                dataset_id = #{datasetID}
        ) temp ON t.id = temp.job_id
        ORDER BY create_time DESC
    </select>

