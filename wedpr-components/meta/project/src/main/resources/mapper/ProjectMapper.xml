    <delete id="deleteProjects" parameterType="java.util.List">
        delete from `wedpr_project_table`
        <foreach collection="projectList" item = "projectID" index = "index" separator=",">
            where `id` = #{projectID}
        </foreach>
        <if test="owner != null and owner !=''">
